<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jez433_clank.web_socket_server.class">Jez433\ClankBundle\Server\Type\WebSocketServerType</parameter>
        <parameter key="jez433_clank.web_socket_server.port">8080</parameter>
        <parameter key="jez433_clank.web_socket_server.host"></parameter>

        <parameter key="jez433_clank.web_socket_server.periodic" type="collection">
            <!-- Sample Periodic Service, being executed every 5000ms (5s). Uncomment to enable -->
            <!-- <parameter key="jez433_clank.periodic_sample_service">5000</parameter> -->
        </parameter>

        <parameter key="jez433_clank.rpc_services" type="collection">
            <!-- Sample RPC Service. Key is the service ID, Argument is the "Network NameSpace". Uncomment to enable -->
            <parameter key="jez433_clank.rpc_sample_service">sample</parameter>
        </parameter>


        <parameter key="jez433_clank.servers" type="collection">
            <parameter>jez433_clank.web_socket_server</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="jez433_clank.entry_point" class="Jez433\ClankBundle\Server\EntryPoint">
            <argument type="service" id="service_container" />
            <argument>%jez433_clank.servers%</argument>
        </service>

        <service id="jez433_clank.web_socket_server" class="%jez433_clank.web_socket_server.class%">
            <argument>%jez433_clank.web_socket_server.host%</argument>
            <argument>%jez433_clank.web_socket_server.port%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="setPeriodicServices">
                <argument>%jez433_clank.web_socket_server.periodic%</argument>
            </call>
           <!-- <argument type="service" id="service_id" />
            <argument>plain_value</argument>
             -->
        </service>

        <service id="jez433_clank.clank_app" class="Jez433\ClankBundle\Server\App\ClankApp">
            <argument type="service" id="jez433_clank.clank_handler_rpc" />
            <argument type="service" id="jez433_clank.clank_handler_topic" />
        </service>

        <service id="jez433_clank.clank_handler_rpc" class="Jez433\ClankBundle\Server\App\Handler\RPCHandler"></service>
        <service id="jez433_clank.clank_handler_topic" class="Jez433\ClankBundle\Server\App\Handler\TopicHandler"></service>

        <!-- Sample Services for examples -->
        <service id="jez433_clank.rpc_sample_service" class="Jez433\ClankBundle\RPC\SampleService"></service>
        <service id="jez433_clank.periodic_sample_service" class="Jez433\ClankBundle\Service\SampleService"></service>
    </services>




